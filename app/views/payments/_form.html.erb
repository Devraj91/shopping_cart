    <%= f.label :cc_number %><br>
    <%= f.text_field :cc_number, :required => true, :placeholder=>"Credit Card Number" %>
  </div>
  <div class="field">
    <%= f.label :cvv_number %><br>
    <%= f.text_field :cvv_number , :required => true, :placeholder=>"CVV Number"%>
  </div>
  <div class="field">
    <%= f.label :validity %><br>
    <%= f.text_field :validity , :required => true, :placeholder=>"Card Validity"%>
  </div>
  <div class="actions">
    <%= f.submit %>
    <%= link_to 'Cancel', products_path%>
  </div>
<% end %>
</div>
