<div class="bs-example">
  <td><%= link_to 'Add Proudct' , new_admin_product_path,:class=>"btn btn-primary show-btn"  %></td>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <table class="table">
          <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>description</th>
            <th>price</th>
          </tr>
          </thead>
          <tbody>
          <% @products.each do |i|%>
              <tr>
                <td><%=image_tag i.image.url(:thumb)%></td>
                <td><%= i.title%></td>
                <td><%= i.description%></td>
                <td><%= i.price%></td>

                <td><%= link_to 'Show' , admin_product_path(i.id),:class=>"btn btn-primary show-btn"  %></td>
                <td><%= link_to 'Edit' , edit_admin_product_path(i.id),:class=>"btn btn-primary show-btn"  %></td>
                <td><%= link_to 'Delete' , admin_product_path(i.id),:class=>"btn btn-primary show-btn" , :confirm => 'Are you sure' , :method => 'delete'%></td>

              </tr>
          <% end %>
          </tbody>
        </table>
       </div>
    </div>
  </div>
</div>
